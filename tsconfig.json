{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "entities/*": [
        "./src/entities/*"
      ],
      "features/*": [
        "./src/features/*"
      ],
      "widgets/*": [
        "./src/widgets/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "app/*": [
        "./src/app/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}